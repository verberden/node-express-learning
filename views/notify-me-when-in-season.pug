extends layouts/main.pug

block content
    .formContainer
        form(class="form-horizontal newsletterForm", role="form", action="/notify-me-when-in-season", method="POST")
            input(type="hidden", name="sku", value=sku)
            .form-group
                label(for="fieldEmail", class="col-sm-2 control-label") Email
                .col-sm-4
                    input(type="email", name="email", id="fieldEmail", class="form-control", required)
            .form-group
                .col-sm-offset-2.col-sm-4
                    button(type="submit", class="btn btn-default") Send