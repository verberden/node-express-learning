extends layouts/main.pug

block content
    h1 Your Shopping Cart
    p Please provide your email address so we can send you a confirmation of your order.
    form(class="form-horizontal newsletterForm", role="form", action="/cart/checkout", method="POST")
        .form-group
            label(for="fieldName", class="col-sm-2 control-label") Name
            .col-sm-4
                input(type="text", class="form-control", required, id="fieldName", name="name")
        .form-group
            label(for="fieldEmail", class="col-sm-2 control-label") Email
            .col-sm-4
                input(type="email", class="form-control", required, id="fieldEmail", name="email")
        .form-group
            .col-sm-offset-2.col-sm-4
                button(type="submit", class="btn btn-default") Checkout